@namespace Common.Web

@using Microsoft.AspNetCore.Components.Web

@if (Active)
{
    <svg class="step-icon-active clickable" focusable="false" viewBox="0 0 24 24" aria-hidden="true" style="margin: 5px;">
        <circle cx="12" cy="12" r="12"></circle>
        <text class="step-icon-text" x="12" y="16" text-anchor="middle">@Number</text>
    </svg>
}
else
{
    <svg class="step-icon-inactive clickable" focusable="false" viewBox="0 0 24 24" aria-hidden="true" style="margin: 5px;" @onclick=@( async () => { await OnClick.InvokeAsync(Number); })>
        <circle cx="12" cy="12" r="12"></circle>
        <text class="step-icon-text" x="12" y="16" text-anchor="middle">@Number</text>
    </svg>
}

@code
{
    [Parameter]
    public bool Active { get; set; }

    [Parameter]
    public int Number { get; set; }

    [Parameter]
    public EventCallback<int> OnClick { get; set; }
}