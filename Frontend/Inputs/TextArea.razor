@namespace Common.Web
@inherits StringInput

@using Syncfusion.Blazor.Inputs
@using Microsoft.AspNetCore.Components.Forms

<div class="input" style=@($"width: {Width}")>
    <SfTextBox Multiline=true Value=@Value ValueChanged=@ValueChanged FloatLabelType=@FloatLabelType.Auto Placeholder=@Label CssClass="e-outline e-bigger" Enabled=@(!Disabled) Type=@Type Input=@OnValueEntered ValueExpression=@ValidationExpression ValidateOnInput=@ValidateOnInput style="height: 84px;" />
    @if (ValidationExpression != null)
    {
        <ValidationMessage For=@ValidationExpression />
    }
</div>