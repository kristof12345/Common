@namespace Common.Web

<div class="step">
    @if (Number != 0)
    {
        <div class="line"></div>
    }
    <Vertical>
        <StepIcon Active=@Active Completed=@Completed Number=@Number />
        <label class=@(Active || Completed ? "active" : "inactive")>@Title</label>
    </Vertical>
</div>

@code
{
    [Parameter]
    public bool Active { get; set; } = false;

    [Parameter]
    public bool Completed { get; set; } = false;

    [Parameter]
    public int Number { get; set; }

    [Parameter]
    public string Title { get; set; }
}