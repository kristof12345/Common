@namespace Common.Web

@using Common.Application

@if (Data != null)
{
    <Horizontal VerticalAlign=@VerticalAlignment.Start Margin=@Margin Wrap=@FlexWrap.Wrap>
        @foreach (var item in Data)
        {
            <Horizontal Width="auto" Margin=@(new Border("10px", "0px"))>
                <Icon IconType="pie_chart" Color=@item.Color Margin=@Border.Right("10px") />
                <Paragraph Class="center-text">@item.Label</Paragraph>
            </Horizontal>
        }
    </Horizontal>
}

@code
{
    [Parameter]
    [EditorRequired]
    public IEnumerable<ILabeledValue> Data { get; set; }

    [Parameter]
    public Border Margin { get; set; } = Border.Top("10px");
}