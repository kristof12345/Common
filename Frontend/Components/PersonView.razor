@namespace Common.Web
@using Common.Application

<Vertical Width=@Width MinWidth="160px">
    <CircleImage Src=@(Settings.BaseUrl + Image) Size=@Size BorderWidth=3 />
    <Subtitle Class="center-text">@Name</Subtitle>
    <Subtitle Class="center-text" Style=@($"color: {Colors.Primary};")>@Position</Subtitle>
</Vertical>

@code
{
    [Parameter]
    [EditorRequired]
    public string Name { get; set; }

    [Parameter]
    [EditorRequired]
    public string Image { get; set; }

    [Inject]
    public ServerSettings Settings { get; set; }

    [Parameter]
    public string Position { get; set; }

    [Parameter]
    public int Size { get; set; } = 150;

    [Parameter]
    public string Width { get; set; } = "20%";
}