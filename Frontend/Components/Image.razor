@namespace Common.Web

<img src=@Path style=@($"width: {Width}; height: {Height}; margin: {Margin}; object-fit: contain;")>

@code {

    [Parameter]
    [EditorRequired]
    public string Src { get; set; }

    [Parameter]
    public string Width { get; set; } = "auto";

    [Parameter]
    public string Height { get; set; } = "auto";

    [Parameter]
    public Border Margin { get; set; } = new Border("20px");

    [Parameter]
    public bool DisableCache { get; set; } = false;

    private string Path
    {
        get => DisableCache ? Src + "?" + DateTime.Now.Millisecond : Src;
    }
}
