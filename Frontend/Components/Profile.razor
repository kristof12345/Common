@namespace Common.Web

@using Common.Application

<CircleImage Src=@Image />
<Heading Class="center-text">@Name</Heading>
<Paragraph Class="center-text" Color=@Colors.Primary>@Type</Paragraph>
<Subtitle Class="center-text">@District</Subtitle>

@code
{
    [Parameter]
    [EditorRequired]
    public string Name { get; set; }

    [Parameter]
    [EditorRequired]
    public string Image { get; set; }

    [Parameter]
    [EditorRequired]
    public UserType Type { get; set; }

    [Parameter]
    [EditorRequired]
    public string District { get; set; }
}