@namespace Common.Web
@inherits AppContainer

@using Syncfusion.Blazor.Navigations

<SfAccordion Width=@Width>
    <AccordionItems>
        <AccordionItem>
            <HeaderTemplate>
                <Horizontal HorizontalAlign=@HorizontalAlignment.SpaceBetween Padding=@(new Border("40px","0px"))><Subtitle>@Title</Subtitle><Subtitle Color=@Colors.Primary>@Subtitle</Subtitle>
            </Horizontal>
            </HeaderTemplate>
            <ContentTemplate>
                @ChildContent
            </ContentTemplate>
        </AccordionItem>
    </AccordionItems>
</SfAccordion>

@code
{
    [Parameter]
    public string Title { get; set; }

    [Parameter]
    public string Subtitle { get; set; }
}
