@namespace Common.Web
@inherits AppTypography

<h5 onclick=@OnClick style=@($"font-size: {Size}px; font-weight: {Weight}; width: {Width}; letter-spacing: 0.25px; text-align: {Align}; color: {Color}; margin: {Margin.ToString()}; {Style}") class=@Class>@ChildContent</h5>

@code
{
    [Parameter]
    public int Size { get; set; } = 20;

    [Parameter]
    public int Weight { get; set; } = 500;
}