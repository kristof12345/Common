@namespace Common.Web
@inherits AppTypography

<h3 onclick=@OnClick style=@($"font-size: {Size}px; font-weight: {Weight}; line-height: 32px; text-align: {Align}; color: {Color}; margin: {Margin.ToString()}; {Style}") class=@Class>@ChildContent</h3>

@code
{
    [Parameter]
    public int Size { get; set; } = 24;

    [Parameter]
    public int Weight { get; set; } = 400;
}