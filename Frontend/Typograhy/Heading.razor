@namespace Common.Web
@inherits AppTypography

<h2 onclick=@OnClick style=@($"font-size: {Size}px; font-weight: {Weight}; letter-spacing: 0.25px; text-align: {Align}; color: {Color}; margin: {Margin.ToString()}; {Style}") class=@Class>@ChildContent</h2>

@code
{
    [Parameter]
    public int Size { get; set; } = 34;

    [Parameter]
    public int Weight { get; set; } = 400;
}