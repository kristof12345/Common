@page "/diagram"

@using Common.Application
@using System.Timers
@using System.Collections.ObjectModel

<Container Margin=@(new Border("70px", "0px", "0px", "0px")) Padding=@(new Border("10px")) Width="auto">
    <Paper Width="1920px" Margin=@Border.Top("30px") Padding=@(new Border("120px", "20px" ))>
        <DoughnutDiagram Data=@List Height="700px" />
    </Paper>

    <Paper Width="1920px" Margin=@Border.Top("30px") Padding=@(new Border("120px", "20px" ))>
        <PolarDiagram Data=@Ratings Width="550px" Height="400px" Max="10" />
    </Paper>

    <Paper Width="1920px" Margin=@Border.Top("30px") Padding=@(new Border("120px", "20px" ))>
        <GaugeDiagram Data=@Ranges Label=@(300m.FormatCurrency("WUD")) Actual="300" />
    </Paper>

    <Paper Width="1920px" Margin=@Border.Top("30px") Padding=@(new Border("120px", "20px" ))>
        <Vertical Width="400px" Height="500px" Margin=@Border.Top("10px")>
            <LinearDiagram Data=@List Height="70px" />
            <LinearDiagram Data=@List Height="70px" />
            <LinearDiagram Data=@List Height="70px" />
            <LinearDiagram Data=@List Height="70px" />
            <LinearDiagram Data=@List Height="70px" />
        </Vertical>
    </Paper>
</Container>

