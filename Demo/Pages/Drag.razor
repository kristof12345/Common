@page "/drag"
@using Common.Application

<Horizontal HorizontalAlign=@HorizontalAlignment.SpaceBetween VerticalAlign=@VerticalAlignment.Start>
    <Vertical Width="45%">
        <Paragraph Class="center-text">Available options</Paragraph>
        <DropArea Items=@Available OnChange=@HandleChange OnClick=@HandleClick />
    </Vertical>
    <Vertical Width="45%">
        <Paragraph Class="center-text">Your preferences</Paragraph>
        <DropArea Items=@Preferences OnChange=@HandleChange />
    </Vertical>
</Horizontal>


@code
{

    private List<IUnique> Available;

    private List<IUnique> Preferences;

    protected override void OnInitialized()
    {
        Available = new List<IUnique>{ new Unique { Id=1, Content="Content 1" } };
        Preferences = new List<IUnique>{ };
    }

    private void HandleChange()
    {

    }

    private void HandleClick(IUnique item)
    {
        Available.Remove(item);
        Preferences.Add(item);
    }

    class Unique : IUnique
    {
        public int Id { get; set; }

        public string Content { get; set; }
    }
}